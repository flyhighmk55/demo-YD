
//섹션 배경 컨텐츠 높이에 맞추기
var bgh = $('section .wrap').height();
$('.bg').css('height', bgh);


// 메인 날씨 호버 정보창 활성화 
$('#index-main .weather > li:nth-child(1) div p a').hover(
    function(){
        $(this).next().show();
    }, function(){
        $(this).next().hide();
    }
);



// 메인 퀵메뉴 호버시 애니메이트
function quick_hover (){
var quick_l = $('#index-main .quick li').length;
    for(var i = 0; i <= quick_l; i++){
        var quick_i = $('#index-main .quick li').index();
        $('#index-main .quick li').eq(i).find('span').css('background-position', i*-65 + 'px 0');
    };
};

quick_hover();

$('#index-main .quick li').hover(
    function(){
        var quick_i = $(this).index();
        $(this).find('span').css('background-position', quick_i*-65 + 'px -4px');
    }, function(){
        quick_hover();
    }
);



// 메인 오피스 호버시 애니메이트
function office_hover (){
var quick_l = $('#index-main .office > ul li').length;
    for(var i = 0; i <= quick_l; i++){
        var quick_i = $('#index-main .office > ul li').index();
        $('#index-main .office > ul li').eq(i).find('span').css('background-position', i*-35 + 'px 6px');
    };
};

office_hover();

$('#index-main .office > ul li').hover(
    function(){
        var quick_i = $(this).index();
        $(this).find('span').css('background-position', quick_i*-35 + 'px 2px');
    }, function(){
        office_hover();
    }
);



// 메인 배너

var banner1_clone = $('#index-main .banner ul li').eq(0).clone();
$('#index-main .banner ul').append(banner1_clone);

var banner_l = $('#index-main .banner ul li').length;
var banner_w = $('#index-main .banner ul li').width();


// 메인 배너 자동 슬라이드 + 페이지 넘버링

 $('#index-main .banner .btn .page .total').text(banner_l-1);


var banner_n = 0;
function banner_auto (){
    banner_n++;
    if ( banner_n >= banner_l-1 ){
        $('#index-main .banner ul').animate({'left':-banner_w*banner_n},500, function(){
            $(this).css({'left':0});
        });
        banner_n = 0;
    } else {
        $('#index-main .banner ul').animate({'left':-banner_w*banner_n},500);
    }
    $('#index-main .banner .btn .page .now').text(banner_n+1);
};

var banner_auto_timer = setInterval ('banner_auto()', 2000);

$('#index-main .banner').hover(
    function(){
        clearInterval(banner_auto_timer);
    }, function(){
        banner_auto_timer = setInterval ('banner_auto()', 2000);
    }
);


// 메인 배너 버튼

$('#index-main .banner .btn .prev').click(function(){
    var banner_i = $('#index-main .banner ul li').index();
    $('#index-main .banner ul').animate({'left':-banner_w++},500);
    banner_n = banner_i;
});






